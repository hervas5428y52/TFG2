<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_carrito"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardCornerRadius="2dp">
    <!--app:cardUseCompatPadding="true"-->


    <RelativeLayout
        android:id="@+id/ProductosEnElCarrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/txtNombreCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Edicion Jbalvin"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPrecioCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNombreCarrito"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:text="poenirwnbwnprmvrp" />

        <TextView
            android:id="@+id/eliminarProductoCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_below="@id/txtNombreCarrito"
            android:layout_marginStart="280dp"
            android:layout_toRightOf="@id/txtPrecioCarrito"
            android:text="X"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txtTallaCarrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPrecioCarrito"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="poenirwnbwnprmvrp"
            android:textSize="20dp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/eliminarProductoCarrito"
            android:layout_marginTop="50dp"
            android:background="#90000000"
            android:outlineSpotShadowColor="@color/black" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>


